@import "nib";

global-reset();

@font-face {
  font-family: 'Droid Sans Mono';
  src: url('../fonts/DroidSansMono-webfont.eot');
  src: url('../fonts/DroidSansMono-webfont.eot?#iefix') format('embedded-opentype'), url('../fonts/DroidSansMono-webfont.woff') format('woff'), url('../fonts/DroidSansMono-webfont.ttf') format('truetype'), url('../fonts/DroidSansMono-webfont.svg#DroidSansMonoRegular') format('svg');
  font-weight: normal;
  font-style: normal;
}

html {
  height: 100%;
}

body {
  font-family: "Minion Pro", Times, "Times New Roman", serif;
  font-size: 18px;
}

h1, h2, h3, h4, header, nav, #loader {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

code, pre {
  font-family: "Droid Sans Mono", Monaco, monospace;
  font-size: 14px;
}

// Layout

header {
  position: fixed;
  top: 0;
  left: 0;
  height: 50px;
  width: 100%;
  background: rgba(black, 0.05);
  border-bottom: 1px solid rgba(black, 0.2);
  box-shadow: rgba(black, 0.1) 0 1px 3px;
  z-index: 2;
  img {
    display: block;
    margin-left: 30px;
  }
  nav {
    position: absolute;
    right: 15px;
    top: 0;
    line-height: 50px;
    a {
      display: block;
      padding: 0 15px;
      float: left;
      color: #666;
      font-weight: bold;
      font-size: 15px;
      text-decoration: none;
      &:hover {
        color: #333;
      }
    }
  }
}

#sections-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 162px;
  padding: 0 30px;
  height: 100%;
  background: rgba(black, 0.05);
  #sections {
    margin-top: 65px;
    a {
      display: block;
      font-weight: bold;
      text-decoration: none;
    }
    > li {
      padding: 10px 0;
      > a {
        padding: 5px 0;        
        color: #555;
        font-size: 14px;
      }
    }
    ul li {
      a {
        padding: 4px 0;
        font-size: 13px;
        color: #ad6015;
      }
    }
  }
}

#content {
  padding: 30px;
  margin: 51px 0 0 222px;
  position: relative;
  min-height: 100px;
  max-width: 756px;
  #loader {
    color: #888;
    width: 300px;
    height: 24px;
    line-height: 24px;
    position: absolute;
    top: 30px;
    left: 30px;
    background: url(../images/pacman.gif) no-repeat center left;
    padding-left: 32px;
    font-size: 18px;
  }
}

p, pre, blockquote, h1, h2, h3, h4, h5, h6 {
  margin-bottom: 25px;
}

p {
  line-height: 1.3em;
}

pre {
  line-height: 1.2em;
  overflow-y: auto;
}

h2, h2, h4, h5, h6 {
  margin-top: 45px;
  color: #666;
}

h1 {
  font-size: 24px;
}

h2 {
  font-size: 20px;
}

pre {
  padding: 20px;
  background: #f1f1f1;
  box-shadow: rgba(black, 0.1) 0 1px 3px 0 inset;
}